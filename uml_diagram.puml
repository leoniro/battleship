@startuml battleship_class_diagram

skinparam classAttributeIconSize 0
left to right direction
hide circle

class GameControl {
    - player_control :: PlayerControl
    - game :: Game
    + __init__()
    + start()
    + view_scores()
}

class PlayerControl {
    - players :: Player[]
    + add()
    + list()
    + modify()
    + remove()
}


class Grid {
    - height :: int
    - width :: int
    - ships :: Ship[]
    - shots :: [][]
    + place_ship(ship)
    + check_hit(coord)
    + check_defeat()
}
class Game {
    - player_list :: Player[]
    - ui :: UserInterface
    - players :: (Player, Player) {field} 
    - grids :: (Grid, Grid) {field}
    + __init__(Player[], UserInterface)
    + main_loop()
    + turn()
}
abstract class Player {
    - name :: str
    - score :: int
    + __init__() {abstract}
    + name()
    + name(str)
    + score()
    + add_score(int)
    + play_move() {abstract}
}

class Ship {
    - shape :: bool[][]
    - orientation :: int
    - position :: (int, int) {field}
    - sunk :: bool
    + check_hit(coord)
    + check_sunk()
}

class HumanPlayer {}
class ComputerPlayer {}

PlayerControl <-- GameControl
Player <-- PlayerControl
PlayerView <-- PlayerControl

HumanPlayer --|> Player
ComputerPlayer --|> Player

GameControl <-- Game
GameControl <-- GameView
Game <-- GridControl
GridControl <-- Grid
GridControl <-- GridView
Grid <-- ShipControl
ShipControl <-- Ship
ShipControl <-- ShipView

@enduml